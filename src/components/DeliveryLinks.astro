---
import { t, type Locale } from '../i18n/utils';
import restaurant from '../data/restaurant.json';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const ui = t(locale);
---

<div class="flex flex-col sm:flex-row gap-3">
  <a
    href={restaurant.delivery.ubereats}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center gap-2 px-5 py-3.5 sm:py-3 bg-black text-white rounded-xl font-semibold text-sm hover:bg-gray-800 active:bg-gray-700 transition-colors min-h-[48px]"
  >
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"/>
      <path d="M13 7h-2v6l5.25 3.15.75-1.23-4-2.42z"/>
    </svg>
    {ui.home.orderOn} Uber Eats
  </a>
  <a
    href={restaurant.delivery.doordash}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center gap-2 px-5 py-3.5 sm:py-3 bg-red-600 text-white rounded-xl font-semibold text-sm hover:bg-red-700 active:bg-red-800 transition-colors min-h-[48px]"
  >
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M23.071 8.409a6.09 6.09 0 00-5.396-3.228H.584A.589.589 0 000 5.769a6.09 6.09 0 005.396 3.228h17.09a.589.589 0 00.585-.588zM23.071 16.023a6.09 6.09 0 00-5.396-3.228H.584a.589.589 0 00-.584.588 6.09 6.09 0 005.396 3.228h17.09a.589.589 0 00.585-.588z"/>
    </svg>
    {ui.home.orderOn} DoorDash
  </a>
</div>
