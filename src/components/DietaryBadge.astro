---
import { t, type Locale } from '../i18n/utils';

interface Props {
  type: string;
  locale: Locale;
}

const { type, locale } = Astro.props;
const ui = t(locale);

const badgeConfig: Record<string, { label: string; abbr: string; class: string }> = {
  'vegetarian': {
    label: ui.dietary['vegetarian'],
    abbr: 'V',
    class: 'bg-green-100 text-green-700 border-green-200',
  },
};

const badge = badgeConfig[type];
---

{badge && (
  <span
    class={`inline-flex items-center px-1.5 py-0.5 text-[10px] font-semibold rounded border ${badge.class}`}
    title={badge.label}
  >
    {badge.abbr}
  </span>
)}
