---
import { t, type Locale } from '../i18n/utils';
import restaurant from '../data/restaurant.json';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const ui = t(locale);

const mapQuery = encodeURIComponent(`${restaurant.address.full}`);
const embedUrl = `https://www.google.com/maps?q=${mapQuery}&output=embed`;
---

<div class="rounded-xl overflow-hidden border border-warm-200 shadow-sm">
  <div class="relative w-full" style="padding-bottom: 56.25%; min-height: 250px;">
    <iframe
      class="absolute inset-0 w-full h-full"
      src={embedUrl}
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title={locale === 'en' ? 'ColorEat location on Google Maps' : 'Розташування ColorEat на Google Maps'}
      style="border: 0;"
    ></iframe>
  </div>
  <div class="bg-white px-4 py-3 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
    <div>
      <p class="text-sm font-medium text-warm-800">{restaurant.address.full}</p>
      <a
        href={`tel:${restaurant.phone.replace(/[^\d+]/g, '')}`}
        class="text-sm text-brand-600 hover:text-brand-700 transition-colors"
      >
        {restaurant.phone}
      </a>
    </div>
    <a
      href={restaurant.googleMapsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1.5 px-4 py-2 bg-brand-600 text-white text-sm font-medium rounded-lg hover:bg-brand-700 transition-colors shrink-0"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      {ui.map.getDirections}
    </a>
  </div>
</div>
