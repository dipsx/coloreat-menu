---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SchemaRestaurant from '../components/SchemaRestaurant.astro';
import type { Locale } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  locale: Locale;
}

const { title, description = 'Authentic Ukrainian cuisine in Oakville. Fresh ingredients, homemade flavours.', locale } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const alternateLocale = locale === 'en' ? 'ua' : 'en';
const alternatePath = Astro.url.pathname.replace(`/${locale}/`, `/${alternateLocale}/`);
const alternateUrl = new URL(alternatePath, Astro.site);
const fullTitle = `${title} | ColorEat Cafe`;
---

<!doctype html>
<html lang={locale === 'ua' ? 'uk' : 'en'} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#7d1a3a" />
    <meta name="robots" content="index, follow" />

    <link rel="canonical" href={canonicalUrl.href} />
    <link rel="alternate" hreflang={alternateLocale === 'ua' ? 'uk' : 'en'} href={alternateUrl.href} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${base}/logo/logo-32.png`} />
    <link rel="icon" type="image/png" sizes="192x192" href={`${base}/logo/logo-192.png`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${base}/logo/logo-180.png`} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&family=Great+Vibes&display=swap" rel="stylesheet" />

    <title>{fullTitle}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:site_name" content="ColorEat Cafe" />
    <meta property="og:locale" content={locale === 'ua' ? 'uk_UA' : 'en_CA'} />
    <meta property="og:image" content={new URL(`${base}/logo/logo-512.png`, Astro.site).href} />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(`${base}/logo/logo-512.png`, Astro.site).href} />

    <!-- Structured Data -->
    <SchemaRestaurant locale={locale} />

    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-warm-50 text-warm-900 font-sans antialiased">
    <Header locale={locale} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>
