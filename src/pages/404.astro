---
import Layout from '../layouts/Layout.astro';
import { t, getLocalizedPath } from '../i18n/utils';

const locale = 'en';
const ui = t(locale);
const homePath = getLocalizedPath('/', locale);
const menuPath = getLocalizedPath('/menu/', locale);
---

<Layout title={ui.notFound.title} locale={locale} description="Page not found">
  <div class="max-w-2xl mx-auto px-4 py-20 sm:py-32 text-center">
    <div class="text-8xl font-bold text-brand-200 font-[Playfair_Display] mb-4">404</div>
    <h1 class="text-2xl sm:text-3xl font-bold text-warm-900 font-[Playfair_Display] mb-4">
      {ui.notFound.title}
    </h1>
    <p class="text-warm-600 mb-8 max-w-md mx-auto">
      {ui.notFound.message}
    </p>
    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <a
        href={homePath}
        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-brand-700 text-white font-semibold rounded-xl hover:bg-brand-800 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        {ui.notFound.goHome}
      </a>
      <a
        href={menuPath}
        class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-brand-700 text-brand-700 font-semibold rounded-xl hover:bg-brand-50 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        {ui.notFound.viewMenu}
      </a>
    </div>
  </div>
</Layout>
