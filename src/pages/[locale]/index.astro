---
import Layout from '../../layouts/Layout.astro';
import DeliveryLinks from '../../components/DeliveryLinks.astro';
import MapEmbed from '../../components/MapEmbed.astro';
import OpeningHours from '../../components/OpeningHours.astro';
import { t, l, getLocalizedPath, type Locale } from '../../i18n/utils';
import restaurant from '../../data/restaurant.json';

export function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'ua' } },
  ];
}

const locale = Astro.params.locale as Locale;
const ui = t(locale);
const menuPath = getLocalizedPath('/menu/', locale);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title={ui.nav.home} locale={locale} description={ui.home.description}>
  <!-- Hero Section — light cream background matching PDF aesthetic -->
  <section class="relative overflow-hidden pattern-bg">
    <div class="relative max-w-3xl mx-auto px-6 sm:px-12 py-16 sm:py-28 text-center">
      <!-- Logo -->
      <div class="flex justify-center mb-6 sm:mb-8 animate-fade-in-up">
        <img
          src={`${base}/logo/logo-512.png`}
          alt="ColorEat Cafe"
          class="w-40 sm:w-52 h-auto"
          width="512"
          height="512"
        />
      </div>

      <!-- Tagline — "Ukrainian restaurant" as in the PDF -->
      <p class="font-serif text-sm sm:text-base uppercase tracking-[0.15em] text-warm-600 mb-8 sm:mb-10 animate-fade-in-up-delay-1">
        {ui.home.heroTitle}
      </p>

      <!-- Decorative divider -->
      <div class="ornate-divider mb-8 sm:mb-10 animate-fade-in-up-delay-1">
        <span class="text-gold-400 text-sm">&#9670;</span>
      </div>

      <!-- Brand story from the PDF -->
      <p class="font-serif text-lg sm:text-xl text-warm-700 leading-relaxed mb-4 max-w-xl mx-auto italic animate-fade-in-up-delay-2">
        {ui.home.heroTagline}
      </p>
      <p class="text-sm sm:text-base text-warm-600 leading-relaxed mb-8 sm:mb-10 max-w-lg mx-auto animate-fade-in-up-delay-2">
        {ui.home.heroSubtagline}
      </p>

      <!-- CTA button -->
      <a
        href={menuPath}
        class="inline-flex items-center gap-2 px-8 sm:px-10 py-3 sm:py-3.5 bg-brand-700 text-white font-semibold rounded-sm hover:bg-brand-800 active:bg-brand-900 transition-all shadow-md hover:shadow-lg text-sm sm:text-base tracking-wide uppercase animate-fade-in-up-delay-3"
      >
        {ui.home.viewMenu}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Services Section -->
  <section class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <h2 class="text-2xl sm:text-3xl font-serif font-semibold text-center text-brand-700 mb-8 sm:mb-12 tracking-wide">
      {ui.home.services}
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 mb-8 sm:mb-10">
      <!-- Dine-in -->
      <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-warm-200 hover:shadow-md hover:border-gold-400 transition-all duration-300">
        <div class="w-14 h-14 mx-auto mb-4 bg-warm-50 rounded-full flex items-center justify-center border border-warm-200">
          <svg class="w-7 h-7 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c-1.5 0-2 1-2 2v4H7l-1 2h12l-1-2h-3V5c0-1-.5-2-2-2zM5 13v1a6 6 0 0012 0v-1M8 21h8" />
          </svg>
        </div>
        <h3 class="text-lg font-serif font-semibold text-warm-800 mb-1">{ui.home.dineIn}</h3>
        <p class="text-sm text-warm-600">{ui.home.dineInDesc}</p>
      </div>

      <!-- Takeout -->
      <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-warm-200 hover:shadow-md hover:border-gold-400 transition-all duration-300">
        <div class="w-14 h-14 mx-auto mb-4 bg-warm-50 rounded-full flex items-center justify-center border border-warm-200">
          <svg class="w-7 h-7 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </div>
        <h3 class="text-lg font-serif font-semibold text-warm-800 mb-1">{ui.home.takeout}</h3>
        <p class="text-sm text-warm-600">{ui.home.takeoutDesc}</p>
        <a href={`tel:${restaurant.phone.replace(/[^\d+]/g, '')}`} class="text-brand-700 text-sm font-medium mt-2 inline-block hover:text-brand-600 transition-colors">
          {restaurant.phone}
        </a>
      </div>

      <!-- Delivery -->
      <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-warm-200 hover:shadow-md hover:border-gold-400 transition-all duration-300">
        <div class="w-14 h-14 mx-auto mb-4 bg-warm-50 rounded-full flex items-center justify-center border border-warm-200">
          <svg class="w-7 h-7 text-brand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
          </svg>
        </div>
        <h3 class="text-lg font-serif font-semibold text-warm-800 mb-1">{ui.home.delivery}</h3>
        <p class="text-sm text-warm-600 mb-3">{ui.home.deliveryDesc}</p>
      </div>
    </div>

    <!-- Delivery buttons -->
    <div class="max-w-md mx-auto">
      <DeliveryLinks locale={locale} />
    </div>
  </section>

  <!-- Visit Us / Location -->
  <section class="bg-white border-t border-warm-200">
    <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
      <h2 class="text-2xl sm:text-3xl font-serif font-semibold text-brand-700 text-center mb-8 sm:mb-10 tracking-wide">
        {ui.footer.visitUs}
      </h2>

      <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 sm:gap-8">
        <!-- Map -->
        <div class="lg:col-span-3">
          <MapEmbed locale={locale} />
        </div>

        <!-- Opening Hours -->
        <div class="lg:col-span-2 bg-warm-50 rounded-lg border border-warm-200 p-5 sm:p-6">
          <OpeningHours locale={locale} />
        </div>
      </div>
    </div>
  </section>
</Layout>
